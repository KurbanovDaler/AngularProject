{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "concurrently",
    "isShellCommand": true,
    "args": ["--raw", "tsc -w -p .", "ng build --watch --progress false"],
    "showOutput": "silent",
    "isWatching": true,
    "problemMatcher": [
        "$tsc-watch",
        {
            "owner": "typescript",
            "fileLocation": "absolute",
            "applyTo": "allDocuments",
            "pattern": {
                "regexp": "^(?:.*Error: )? *([a-zA-Z:\\/\\-.]*)\\s+\\(([0-9,]*)\\):\\s+([^)]*)",
                "file": 1,
                "location": 2,
                "message": 3
            },
            "watching": {
                "activeOnStart": false,
                "beginsPattern": "^ *Hash.*$",
                "endsPattern": "^ *chunk.*]$"
            }
        }
    ]
}