{
    "typescript.tsdk": "./node_modules/typescript/lib",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.js": { "when": "$(basename).ts"},
        "**/*.js.map": { "when": "$(basename)"},
        "**/*.d.ts": { "when": "$(basename).ts"},
        "**/*.ngfactory.ts": { "when": "$(basename).ts"},
        "**/*.metadata.json": true,
        "**/*.ngsummary.json": true
    },
    "editor.fontSize": 14,
    "tsimporter.spaceBetweenBraces": false
}